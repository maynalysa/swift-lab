#!/bin/bash

# --- Configuration ---
SWIFTLINT_VERSION="0.59.0" # Specify the desired SwiftLint version
SWIFTGEN_VERSION="6.6.3"   # Specify the desired SwiftGen version

# --- Helper Functions ---

function check_tool() {
  local tool_name="$1"
  if command -v "$tool_name" &> /dev/null; then
    echo "‚úÖ $tool_name is already installed."
    return 0
  else
    echo "‚ùå $tool_name is not installed."
    return 1
  fi
}

function install_tool() {
  local tool_name="$1"
  local version="$2"
  local install_command=""

  echo "‚öôÔ∏è Installing $tool_name..."

  if [[ "$tool_name" == "swiftlint" ]]; then
    install_command="brew install swiftlint@$version"
  elif [[ "$tool_name" == "swiftgen" ]]; then
    install_command="brew install swiftgen@$version"
  else
    echo "‚ö†Ô∏è Installation for $tool_name is not defined."
    return 1
  fi

  if eval "$install_command"; then
    echo "‚úÖ Successfully installed $tool_name $version."
    return 0
  else
    echo "‚ùå Failed to install $tool_name. Please check the output for errors."
    return 1
  fi
}

# --- Main Script ---

echo "üõ†Ô∏è Setting up development environment..."

# Check and install Homebrew if not present
if ! command -v brew &> /dev/null; then
  echo "üç∫ Homebrew not found. Installing..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  if ! command -v brew &> /dev/null; then
    echo "‚ùå Failed to install Homebrew. Please install it manually and run this script again."
    exit 1
  fi
fi

# Check and install SwiftLint
if check_tool "swiftlint"; then
  swiftlint --version | grep "$SWIFTLINT_VERSION" &> /dev/null
  if [ $? -ne 0 ]; then
    echo "‚ö†Ô∏è SwiftLint version mismatch. Expected $SWIFTLINT_VERSION."
    echo "Attempting to upgrade SwiftLint..."
    brew upgrade swiftlint@"$SWIFTLINT_VERSION" || {
      echo "‚ùå Failed to upgrade SwiftLint. Please investigate."
      exit 1
    }
    echo "‚úÖ SwiftLint upgraded to $SWIFTLINT_VERSION."
  fi
else
  install_tool "swiftlint" "$SWIFTLINT_VERSION" || exit 1
fi

# Check and install SwiftGen
if check_tool "swiftgen"; then
  swiftgen --version | grep "$SWIFTGEN_VERSION" &> /dev/null
  if [ $? -ne 0 ]; then
    echo "‚ö†Ô∏è SwiftGen version mismatch. Expected $SWIFTGEN_VERSION."
    echo "Attempting to upgrade SwiftGen..."
    brew upgrade swiftgen@"$SWIFTGEN_VERSION" || {
      echo "‚ùå Failed to upgrade SwiftGen. Please investigate."
      exit 1
    }
    echo "‚úÖ SwiftGen upgraded to $SWIFTGEN_VERSION."
  fi
else
  install_tool "swiftgen" "$SWIFTGEN_VERSION" || exit 1
fi

echo "üöÄ Running SwiftLint..."
if swiftlint --strict; then
  echo "‚úÖ SwiftLint found no issues."
else
  echo "‚ö†Ô∏è SwiftLint found issues. Please fix them."
fi

echo "üöÄ Running SwiftGen..."
if swiftgen config run --verbose; then
  echo "‚úÖ SwiftGen completed successfully."
else
  echo "‚ö†Ô∏è SwiftGen encountered errors. Please check your configuration."
fi

echo "‚úÖ Development environment setup complete!"
